            bold: True
            markup: True
            pos_hint: {"center_x": 0.5, "top": 0.9}
            size_hint: 1, 0.08
            text: "[color=##00FF0A]Seu Id Ãšnico :[/color]"
        
        GridLayout:
            canvas.before:
                Color:
                    rgb: 168/255, 168/255, 168/255, 0.2
                Rectangle:
                    pos:self.pos
                    size:self.size
                    
            pos_hint: {"right": 1, "top": 0.12 }
